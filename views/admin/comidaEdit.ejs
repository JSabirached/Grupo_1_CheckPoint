    <main class="container">
        <form action="/admin/admin/update/<%=id%>?_method=PUT " method="POST">
          <h3>Editar</h3>
          <hr>
          <div class="row">
            <div class="col-12 col-md-6  col-lg-3">
              
               <input type="text" class="form-control" id="name" placeholder="name" name="name" value="<%=(typeof old!="undefined"&& old.name) ? old.name:"" %>">
               <spam class="text-danger"><%=(typeof errores!="undefined" && errores.name)? errores.name.msg:""%></spam>
               <br>
             </div>
           </div>
           <div class="col-md-6 col-lg-4">
             <div class="form-floating mb-3">
               <input type="text" class="form-control" id="price" placeholder="price" name="price" value="<%=(typeof old!="undefined"&& old.price) ? old.price:"" %>">
               <spam class="text-danger"><%=(typeof errores!="undefined" && errores.price)? errores.price.msg:""%></spam>
               <label for="price">price</label>
             </div>
           </div>
          
           <div class="col-md-6">
             <div class="form-floating mb-3">
               <input type="text" class="form-control" id="description" placeholder="description" name="description" value="<%=(typeof old!="undefined"&& old.description) ? old.description:"" %>">
               <spam class="text-danger"><%=(typeof errores!="undefined" && errores.description)? errores.description.msg:""%></spam>
               <label for="description">description</label>
             </div>
           </div>
           <div class="col-2 col-md-4  col-lg-10"><div class="form-floating mb-3"></div>
              <input type="file" name="img">
             <select name="category" id="category">elegi tu categoria
               <option value="hamburguesas">hamburguesas</option>
               <option value="bebidas">bebidas</option>
               <option value="postres">postres</option>
               <option value="pizzaEmpa">pizzaEmpa</option>
             </select>
              </div>
            </div>
          
          </div>
        
          <div class="d-grid gap-2">
            <button class="btn btn-success" type="submit">Guardar los cambios</button>
          </div>
        
         
          </form>
        </main>
