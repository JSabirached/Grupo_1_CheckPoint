<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head')  %> 
<body>
  <%- include("../partials/header") %> 
   
 

  <div class="container">
     <h2 class="oferta">-LISTA DE COMIDAS-</h2>
     <div class="d-flex justify-content-end mb-3"> 
      <button class="btn btn-primary"><a href="/admin/create" class="text-white ">AGREGAR PRODUCTOS</a></button>
     </div>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th class="" scope="col">ID</th>
                <th scope="col">Nombre</th>
                <th scope="col">Price</th>
                <th scope="col">categoria</th>
                <th scope="col">Descripcion</th>
                <th scope="col">Editar/Eliminar</th>
            </tr>
        </thead>
        <tbody>
            <% foods.forEach(food=> { %>
                <tr>
                  <th scope="row"><%= food.id %></th>
                    <td>
                        <%= food.name %>
                    </td>
                    <td>
                        <%=food.price%>
                    </td>
                    <td>
                        <%=food.id_category%>
                    </td>
                    <td>
                        <%=food.description%>
                    </td>



                    <td class="d-flex justify-content-around">
                        <form action="">
                            <a href="/admin/edit/<%= food.id%> "><button type="submit"
                                    class="btn btn-primary btn-sm"><i class="fas fa-edit text-white"></i>
                                </button></a>
                        </form>

                        <form action="/admin/remove/<%= food.id%>?_method=DELETE" method="POST"
                            id="delete">
                            <button type="submit" class="btn btn-danger btn-sm"><i
                                    class="fas fa-trash"></i></button>
                        </form>
                    </td>
                </tr>

                <% }); %>

        </tbody>
    </table>
    <a href="/admin">|VOLVER ATRAS|</a>
</div>

 

      <%- include('../partials/footer') %> 
    

</body>
</html>