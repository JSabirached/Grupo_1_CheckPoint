<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head')  %> 
<body>
  <%- include("../partials/header") %> 
   
  <main class="container">
        <section class="row ">
          <% comidas.forEach(comida=> { %>
            <article class="col-12 col-md-4 col-lg-3 ">
              <ul class="list-group list-group-flush my-3 ">
                <li class="list-group-item">
                  <h6>
                      <%= comida.name %> 
                  </h6>
                </li>
                <li class="list-group-item">
                  <h6>
                    <%= comida.price %> 
                  </h6>
                </li>
                <li class="list-group-item">
                  <h6>
                    <%= comida.description%> 
                  </h6>
                </li>
                <li class="list-group-item">
                  <a href="" data-bs-toggle="modal" data-bs-target="#exampleModal-<%= comida.id %> ">
                  <%= comida.img %></a>
                </li>
                <li class="list-group-item">
                  <div class="m-2 d-flex justify-content-around">
                   <a href="/admin/admin/edit/<%= comida.id %> " class="btn btn-sm btn-success">Editar</a>
                   <form action="/admin/admin/delete/<%= comida.id %>?_method=DELETE " method="POST">
                     <button class="btn btn-sm btn-danger" type="submit">Eliminar</button>
                   </form>
                  </div>
                </li>
              </ul>
            </article>  
            <!-- Modal -->
            <div class="modal fade" id="exampleModal-<%= comida.id %>" tabindex="-1" aria-labelledby="exampleModalLabel"
              aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                  <div class="modal-header">
                    <h6 class="modal-title" id="exampleModalLabel"><%= comida.name %> - <%= comida.precio %> </h6>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    <img src="/images/<%= comida.img %> " class="img-fluid" alt="">
                  </div>
                 
                </div>
              </div>
            </div>
        
            <% }) %>

            
        </section>
      </main>
      <%- include('../partials/footer') %> 
    

</body>
</html>