<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>

  <body>
    <%- include("../partials/header") %>
      <h2 class="oferta">-LISTAR CATEGORIAS</h2>
<div class="container">

      <table class="table table-dark table-striped">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Nombre</th>
            <th scope="col">Editar/Eliminar</th>
          </tr>
        </thead>
        <tbody>
          <% categorias.forEach(categoria=> { %>
            <tr>
              <th scope="row">
                 <%= categoria.id %>
                </th>
              <td>
                <%=categoria.name%>
              </td>




              <td class="d-flex justify-content-around">
                <form action="">
                    <a href="user/admin/edit/<%= categoria.id%> "><button type="submit"
                            class="btn btn-primary btn-sm"><i class="fas fa-edit text-white"></i>
                        </button></a>
                </form>

                <form action="/user/admin/remove/<%= categoria.id%>?_method=DELETE" method="POST"
                    id="delete">
                    <button type="submit" class="btn btn-danger btn-sm"><i
                            class="fas fa-trash"></i></button>
                </form>
            </td>
        </tr>

        <% }); %>

</tbody>
</table>
</div>


      <%- include('../partials/footer') %>


  </body>

</html>