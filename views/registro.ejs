<%- include('partials/head') %>
	<title>registro</title>


<body>
	<%- include('partials/header') %>
	<div class="container">
		<div class="row">
			<div class="col-12">
			     <h1>REGISTRATE</h1><!--method post creamos un formulario -->
			        <form action="/users/registro" method="post" enctype="multipart/form-data" id="form">
				       
						<div class="d-flex flex-column justify-content-center align-items-center">
							<input class="form-control w-25 mb-4" type="text" placeholder="Nombre "  name="name" id="nombre" >
							<span id="nombreErrors"></span>
						</div>
						
						<div class="d-flex flex-column justify-content-center align-items-center">
							<input class="form-control w-25 mb-4" type="text" placeholder="Apellido"  name="name" id="apellido" >
							<span id="apellidoErrors"></span>
						</div>

						<div class="d-flex flex-column justify-content-center align-items-center">
							<input class="form-control w-25 mb-4" type="amail" placeholder="Email"  name="email" id="email" >
							<span id="emailErrors"></span>
						</div>
						
						<div class="d-flex flex-column justify-content-center align-items-center">
							<input class="form-control w-25 mb-4" type="text" placeholder="Contraseña"  name="Contraseña" id="pass" >
							<span id="passErrors"></span>
						</div>

						<div class="d-flex flex-column justify-content-center align-items-center">
							<input class="form-control w-25 mb-4" type="text" placeholder="Reingrese Contraseña"  name="contraseña" id="pass2" >
							<span id="pass2Errors"></span>
						</div>

						<div class="d-flex flex-column justify-content-center align-items-center">
							<input class="form-control w-25 mb-4" type="file" placeholder="Carga tu imagen"  name="imagen" id="img" >
							<span id="imgErrors"></span>
						</div>

						<span>↓↓↓PARA ENVÍOS A DOMICILIO↓↓↓</span>
					
						<div class="d-flex flex-column justify-content-center align-items-center">
							<input class="form-control w-25 mb-2" type="text" placeholder="Provincia"  name="provincia" id="Province" >
						</div>
						<div class="d-flex flex-column justify-content-center align-items-center">
							<input class="form-control w-25 mb-2" type="text" placeholder="localidad"  name="localidad" id="location" >
						</div>
						<div class="d-flex flex-column justify-content-center align-items-center">
							<input class="form-control w-25 mb-2" type="text" placeholder="direccion"  name="direccion" id="address" >
						</div>
						<div class="d-flex flex-column justify-content-center align-items-center">
							<input class="form-control w-25 mb-2" type="text" placeholder="Teléfono"  name="telefono" id="phonenumber" >
						</div>
						
			            	<button class="btn btn-danger" type="submit">Registrarme</button>
							<span id="submitErrors"></span>
						</form>
	      <% if (typeof errores != 'undefined') { %>
				<ul>
					<% errores.forEach(error =>  { %>
						<li><%= error.msg %> </li>
						
						<% }) %>
				</ul>
			 
			<% } %>
    	    </div>
        </div>
    </div>
<%- include('partials/footer') %>
<script src="/javascript/userRegister.js"></script>
</body>
</html>	

  