<%- include('partials/header') %>
<%- include('partials/head') %>
<title>postres</title>
	<body>
		<menu class="container">
			<section class="row">
				<div class="titulo col-12">
					<h2 class="oferta">   <%= categoria.name%></h2>
				</div>
				
				<% categoria.Comidas.forEach(Comidas=> { %>
					
					<div class="col-12 col-md-6 col-lg-3">
					<article class="producto">
						<div class="contenido">
							<figure><a href=""><img src="/images/<%=Comidas.image%>" alt=""></a></figure>

							<h4 class="title"><%=Comidas.name%></h4>
							<h5>$<%=Comidas.price%></h5>

							<div class="detalle mt-3 text-center">
								<hr>
								<p><%=Comidas.description%></p>
							</div>
							<div class="d-grid gap-2 d-md-block">
								
								<button class="btn btn-dark" type="button">Pedir</button>
							</div>
						</div>
					</article>
				</div>
				<% }) %>
			</section>
            <a href="/">Volver al Home</a>
		
			
				</menu>		

	</body>	<!--menu-->
		
      
	 <%- include('partials/footer') %>    
		

